#!/bin/sh

cd /new/window

echo 0 > vis
echo 10,47 > pos
echo 500,100 > size
echo Processes > title

touch ref

echo 9 > ref/text-size
echo 4 > ref/text-font

echo 000 > ref/back-color
echo 0f0 > ref/fore-color

ln /new/frame   view
ln /new/caption view/v

echo 4 > view/padding
echo 0 > view/v/wrapped

daemonize --cwd --stdout --ctty=tty -- ps --wide --monitor > view/v/text

echo 1 > vis

