#!/usr/bin/env macvx

const path = argv[ 1 ]

def converted (path)
{
	try
	{
		return AEDesc(path).to('fsrf')
	}
	catch {}
	
	return AEDesc FSSpec?? path  # FSSpec is 32-bit only.
}

var event = AECreateAppleEvent( 'fndr', 'fupd', AEDesc( sign: 'MACS' ) )

event <-- '----': converted path

try
{
	const reply = AESend event
}
catch
{
	warn rep _
}
