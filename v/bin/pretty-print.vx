#!/usr/bin/env minivx

let bindir = dirname realpath argv[ 0 ]
let libdir = bindir "/../lib/v/"

let import = { let path = libdir _ ".vsl"; eval( load path, path ) }

let pretty-printing = import "pretty-printing"

let Tab = "\t"

def printer (depth, text)
{
	let tabs = Tab * depth
	
	print tabs text
}

let pretty-print = pretty-printing printer

pretty-print eval load argv[ 1 ]

end.
