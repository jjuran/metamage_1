#!/usr/bin/env vx -Z

let src = argv[ 1 ]
let dst = argv[ 2 ]

let dst_r = dst "/r"

run [ "mkdir", "-p", dst_r ]

let rsrcs = listdir src "/r"

for rsrc in rsrcs do
{
	let out = dst_r "/" rsrc
	
	warn out
	
	rewrite out <== load src "/r/" rsrc
}

if let data = load src then
{
	let dst_data = dst "/data"
	
	warn dst_data
	
	rewrite dst_data <== data
}
