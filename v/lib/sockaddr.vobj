module sockaddr

export
def display
{
	const sa = _
	
	const family = u8 (sa[ 1 ] or sa[ 0 ])
	
	const addr
	
	if family == 2 then
	{
		addr = ".".join *(sa[ 4 -> 8 ] map u8)
	}
	else if family == 30 then
	{
		addr = "[" ":".join( hex sa[ 8 -> 24 ] / -4 ) "]"
	}
	else
	{
		return sa
	}
	
	const port = u8 sa[ 2 ] * 256 + u8 sa[ 3 ]
	
	return addr ":" port
}
